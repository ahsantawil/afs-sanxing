<div class="tab-content">
    <div class="tab-pane tabs-animation fade show active" id="tab-content-0" role="tabpanel">
        <div class="main-card mb-3 card">
            <div class="card-body"><h5 class="card-title">Upload data Pengiriman</h5>
                <form class="">
                    <div class="form-row">
                        <div class="col-md-4">
                            <div class="position-relative form-group">
                                <label for="uiw" class="">UIW/UID</label>
                                <select name="uiw" id="uiw" class="form-control" required> 
                                    <option selected>Choose...</option>
                                      <option value="1">UID Banten</option>
                                      <option value="2">UID Disjaya</option>
                                      <option value="3">UID Jabar</option>
                                      <option value="4">UID Lampung</option>
                                      <option value="5">UID Jateng</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="position-relative form-group">
                                <label for="area" class="">Area</label>
                                <select name="area" id="area" class="form-control" required> 
                                    <option selected>Choose...</option>
                                      <option value="1">Banten Selatan</option>
                                      <option value="2">Banten Utara</option>
                                      <option value="3">Teluk Naga</option>
                                      <option value="4">Cikokol</option>
                                      <option value="5">Cikupa</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="position-relative form-group">
                                <label for="nospb" class="">Nomor SPB</label>
                                <input name="nospb" id="nospb" placeholder="Nomor SPB" type="nospb"                                                          class="form-control" required>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-4">
                            <div class="position-relative form-group">
                                <label for="tgl_kirim" class="">Tanggal Pengiriman</label>
                                <input name="tgl_kirim" id="tgl_kirim" type="date" class="form-control" required>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="position-relative form-group">
                                <label for="jml_kirim" class="">Jumlah Pengiriman</label>
                                <input name="state" id="jml_kirim" type="number" class="form-control" required>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="position-relative form-group">
                                <label for="garansi" class="">Garansi</label>
                                <select name="garansi" id="garansi" class="form-control" required> 
                                    <option selected>Choose...</option>
                                      <option value="1">1 Tahun</option>
                                      <option value="2">2 Tahun</option>
                                      <option value="3">3 Tahun</option>
                                      <option value="4">4 Tahun</option>
                                      <option value="5">5 Tahun</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-4">
                            <div class="position-relative form-group">
                                <label for="tipe" class="">Type</label>
                                <select name="tipe" id="tipe" class="form-control" required> 
                                    <option selected>Choose...</option>
                                      <option value="1">CSI-01</option>
                                      <option value="2">CSI-11</option>
                                      <option value="3">CSI-21</option>
                                      <option value="4">CSI-12</option>
                                      <option value="5">P12A4</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="position-relative form-group">
                                <label for="files" class="">Nomor SN</label>
                                <input name="file" id="files" type="file" class="form-control" required>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="mt-2 btn btn-primary">Save</button>
                    <button type="reset" class="mt-2 btn btn-warning">Clear</button>
                </form>
            </div>
        </div>
    </div>
</div>